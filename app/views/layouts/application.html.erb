<!DOCTYPE html>
<html>
  <head>
    <title>Purrojects</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        };
      </script>

    <% end %>
      <script type="text/javascript">
          window.logo = "<%= image_url('purrojects.png') %>";
      </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>